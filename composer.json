        }
    ],
    "license": "MIT",
    "require": {
        "illuminate/support": "^5.2",
        "illuminate/database": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "EGALL\\Transformer\\": "src/"
